<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/edit.css">
<%- include('../partials/nav') %>

<main>
    <body>
        <div id="return-to-collection-header">
            <a href="/collections/<%= record.collectionParent._id %>">
                <h3 id="return-to-collection-text">Return to "<%= record.collectionParent.name %>"</h3></a>
        </div>

        <div id="edit-record-header">
            <h1 class="header-text" id="title-header">Edit: <%= record.title %></h1>

            <img
            id="edit-record-icon"
            src="/images/icons/pencil.png"
            alt="edit record header image"
            />
        </div>

        <div>

            <form 
                id="edit-record-form" 
                action="/collections/<%= record.collectionParent._id %>/records/<%= record._id %>?_method=PUT"
                method="POST"
                autocomplete="off">

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="title-input" class="field-tabel-text">Title:</label>
                    </div>
                    <div class="field-containers-input-field">
                        <input type="text" name="title" id="title-input" class="input-field" value="<%= record.title %>" placeholder="Title">
                    </div>
                </div>

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="author-input" class="field-tabel-text">Artist/Author:</label>
                    </div>
                    <div class="field-containers-input-field">
                        <input type="text" name="author" id="author-input" class="input-field" value="<%= record.author %>" placeholder="Artist/Author">
                    </div>
                </div>

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="release-date" class="field-tabel-text">Release Date:</label>
                    </div>
                    <div class="field-containers-input-field">
                        <input type="date" name="releaseDate" id="release-date" class="input-field" value="<%= record.releaseDate %>">
                    </div>
                </div>

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="notes-input" class="field-tabel-text">Notes:</label>
                    </div>
                        <div class="field-containers-input-field">
                        <input type="text" name="notes" id="notes-input" class="input-field" value="<%= record.notes %>" placeholder="Notes">
                    </div>
                </div>

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="image-url-input" class="field-tabel-text">Image URL:</label>
                    </div>
                    <div class="field-containers-input-field">
                        <input type="text" name="imageUrl" id="image-url-input" class="input-field" value="<%= record.imageUrl %>" placeholder="Image URL">
                    </div>
                </div>

                <div id="save-button-container">
                    <button type="submit" id="save-button" class="btn btn-success">Save Edit</button>
                </div>

            </form>
        </div>
    </body>
</main>

<%- include('../partials/footer') %>