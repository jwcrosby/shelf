<link rel="stylesheet" href="/stylesheets/collections/edit.css">
<%- include('../partials/nav') %>

<main>
    <h1>Edit: <%= collection.name  %></h1>
    <form 
    id="edit-form" 
    action="/collections/<%= collection._id %>?_method=PUT"
    method="POST"
    autocomplete="off">

        <label for="name-input">Collection Name:</label>
            <input type="text" name="name" id="name-input" value=<%= collection.name %>>

        <button type="submit">Edit Collection</button>
    </form>
</main>

