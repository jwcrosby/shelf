<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/collections/edit.css">
<%- include('../partials/nav') %>

<main>
    <body>
        <div id="return-to-profile-header">
            <a href="/profiles/me">
                <h3 id="return-to-profile-text">Return to "My Profile"</h3></a>
        </div>

        <div id="edit-collection-header">
            <h1 class="header-text" id="title-header">Edit: <%= collection.name %></h1>

            <img
            id="edit-collection-icon"
            src="/images/icons/pencil.png"
            alt="edit collection header image"
            />
        </div>

        <div>

            <form 
            id="edit-form" 
            action="/collections/<%= collection._id %>?_method=PUT"
            method="POST"
            autocomplete="off">

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="name-input" class="field-tabel-text">Name:</label>
                    </div>
                    <div class="field-containers-input-field">
                        <input type="text" name="name" id="name-input" class="input-field" value="<%= collection.name %>" placeholder="Name">
                    </div>
                </div>

                <div class="field-containers">
                    <div class="field-containers-label">
                        <label for="type-select" class="field-tabel-text">Artist/Author:</label>
                    </div>
                    <div class="field-containers-input-field">
                        <select name="type" id="type-select" class="input-field" value="<%= collection.type %>">
                            <option value="none" selected disabled hidden>Select a Type</option>
                            <option value="Books" <%- (collection.type=="Books") ? "selected" : null %> >Books</option>
                            <option value="Comics" <%- (collection.type=="Comics") ? "selected" : null %> >Comics</option>
                            <option value="CDs" <%- (collection.type=="CDs") ? "selected" : null %> >CDs</option>
                            <option value="Movies" <%- (collection.type=="Movies") ? "selected" : null %>>Movies</option>
                            <option value="Tapes" <%- (collection.type=="Tapes") ? "selected" : null %>>Tapes</option>
                            <option value="Video Games" <%- (collection.type=="Video Games") ? "selected" : null %>>Video Games</option>
                            <option value="Vinyl Records" <%- (collection.type=="Vinyl Records") ? "selected" : null %>>Vinyl Records</option>
                            <option value="Other" <%- (collection.type=="Other") ? "selected" : null %>>Other</option>
                        </select>
                    </div>
                </div>

                <div id="save-button-container">
                    <button type="submit" id="save-button" class="btn btn-success">Edit Collection</button>
                </div>
            </form>
        </div>
    </body>
</main>

<%- include('../partials/footer') %>