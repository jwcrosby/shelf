<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>

    <h1><%= title %></h1>

    <% if (profile.avatar) { %>
        <div>
            <img 
                class="profile-avatar"
                src="<%= profile.avatar %>"
                alt="<%= profile.name %> avatar"
            >
        </div>
    <% } %>

    <h1>My Shelf</h1>

    <% collections.forEach(collection => { %>

        <div>
                <h2>Name:  <%= collection.name %></h2>

                <h3>Type: <%= collection.type %></h3>

            <a href="/collections/<%= collection._id %>">👁View</a>

            <a href="/collections/<%= collection._id %>/REPLACEWITHDELETE">❌Delete</a>

        </div>
        <% }) %>

</main>

<%- include('../partials/footer') %>